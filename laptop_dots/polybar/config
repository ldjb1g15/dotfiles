;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;	filesystem

[module/filesystem]
type = internal/fs
mount-0 = /
mount-1 = /home

inteval = 10
fixed-values = true
spacing = 4

format-mounted = <label-mounted>
label-mounted = ${env:FILE_LABEL}
label-mounted-foreground = ${colors.colour5}

format-unmounted = <label-unmounted>
label-unmounted = %mountpoint%: not mounted

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;	i3

[module/i3]
