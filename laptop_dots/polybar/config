;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;	temperatures

[module/temperature]

type = internal/temperature

; Seconds to sleep between updates
interval = 0.5

; Thermal zone to use
thermal-zone = 0

; Full path of temperature sysfs path
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

warn-temperature = 60
units = true

format = <ramp> <label>

format-warn = <ramp> <label-warn>

label = %temperature%

label-warn = TEMP %temperature%
label-warn-foreground = #f00

ramp-0 = 
ramp-1 = 
ramp-2 =  
ramp-0-foreground = #00FF00
ramp-1-foreground = #FFA500
ramp-2-foreground = #FF0000

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;	date

[module/date]

; Settings
type = internal/date
interval = 1.0

date = %d-%m-%Y
time =  %I:%M %p%

time-font = 6

;date-alt = %%{F#fff}%A, %d %B %Y
;time-alt =  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}

format = <label>
format-background =
format-foreground = ${colors.colour3} 

label = ${env:DATE_LABEL}
label-font = 0
; export DATE_LABEL="%date% %{F$color3}%time%%{F-}"


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;	memory

[module/memory]

; Settings
type = internal/memory
interval = 1.0
format = <label> <bar-used>
label = ${env:MEM_LABEL}
label-foreground = ${colors.colour3}

