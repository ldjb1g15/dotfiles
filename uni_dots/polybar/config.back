background = ${env:BACK_COL}
foreground = ${colors.foreground}

; Bar Display Settings
monitor = HDMI-0
monitor-strict = false

override-redirect = false
wm-restack = i3
bottom = true
fixed-center = true

width = 100%
height = 25
offset-x = 0
offset-y = 0

radius = 0.0

line-size = 5
line-color = #FFFFFF

border-size = 0
border-color = #000000000
padding-right = 1
padding-left = 1

module-margin = 2

